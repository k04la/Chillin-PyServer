# Makefile

.PHONY: all gen gen_gui

KOALASC = koalasc
PROG_LANG = python

MESSAGE_SRC = "helpers/messages.ks"
GENERATED_MESSAGE_DIR = "helpers"

GUI_MESSAGE_SRC = "gui/messages.ks"
GUI_SCENEACT_SRC = "gui/scene_actions.ks"
GUI_GENERATED_MESSAGE_DIR = "gui"

CAPITALIZATION_RULE = snake_case


all: gen gen_gui

gen:
	$(KOALASC) $(MESSAGE_SRC) $(PROG_LANG) $(GENERATED_MESSAGE_DIR) $(CAPITALIZATION_RULE)


gen_gui:
	$(KOALASC) $(GUI_MESSAGE_SRC) $(PROG_LANG) $(GUI_GENERATED_MESSAGE_DIR) $(CAPITALIZATION_RULE)
	$(KOALASC) $(GUI_SCENEACT_SRC) $(PROG_LANG) $(GUI_GENERATED_MESSAGE_DIR) $(CAPITALIZATION_RULE)
